@model Fruit.ViewModels.ImageViewModel
@{
    /**/

    ViewBag.Title = "Gallery";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Gallery</h2>

@using (Html.BeginForm("GalleryForm", "Drink", new { enctype = "multipart/form-data" }))
{

    <div class="card card-primary col-md-5">
        <div class="card-header">
            <h3 class="card-title">გალერია</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form">
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(x => x.SortIndex)
                    @Html.TextBoxFor(x => x.SortIndex)
                </div>

                <div class="form-group">
                    <label for="exampleInputFile">ატვირთეთ ფოტო</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" name="images" class="custom-file-input" id="exampleInputFile" multiple>
                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                        </div>

                        <div class="input-group-append">
                            <span class="input-group-text" id="">Upload</span>
                        </div>
                    </div>
                </div>
            </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
</form>
    </div>


}



