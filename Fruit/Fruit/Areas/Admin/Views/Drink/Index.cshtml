@model Fruit.ViewModels.CommonViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("UpdateInformation", "Drink", FormMethod.Post))
{
    for (int i = 0; i < 2; i++)
    {
        <div class="card">
            @Html.HiddenFor(c => c.InformationViewModelList[i].Id)

            <div class="form-group">
                @Html.LabelFor(c => c.InformationViewModelList[i].Title)
                @Html.TextAreaFor(c => c.InformationViewModelList[i].Title, new { @class = "form-control", @cols = "100", @rows = "5", @style = "width:30%;" })

            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.InformationViewModelList[i].Subtitle)
                @Html.TextAreaFor(c => c.InformationViewModelList[i].Subtitle, new { @class = "form-control", @cols = "100", @rows = "5", @style = "width:30%;" })

            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.InformationViewModelList[i].Text)
                @Html.TextAreaFor(c => c.InformationViewModelList[i].Text, new { @class = "form-control", @cols = "100", @rows = "5", @style = "width:30%;" })
            </div>
        </div>

    }
    <button type="submit" class="btn btn-primary">შენახვა</button>

}


