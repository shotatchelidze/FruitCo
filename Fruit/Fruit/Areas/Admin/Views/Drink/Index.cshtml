@model Fruit.ViewModels.CommonViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("UpdateInformation", "Drink", FormMethod.Post))
{

    @Html.HiddenFor(c => c.InformationViewModel.ElementAtOrDefault(2).Id)

    <div class="form-group">
        @Html.LabelFor(c => c.InformationViewModel.ElementAtOrDefault(2).Title)
