    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.InformationViewModel.ElementAtOrDefault(2).Text)
        @Html.TextAreaFor(c => c.InformationViewModel.ElementAtOrDefault(2).Text, new { @class = "form-control", @cols = "100", @rows = "5", @style = "width:30%;" })
