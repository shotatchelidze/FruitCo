@model Fruit.ViewModels.ImageViewModel
@{
    ViewBag.Title = "BackgroundImageForm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>BackgroundImageForm</h2>

@using (Html.BeginForm("BackgroundImageForm", "Main", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    


    <div class="card card-primary col-md-5">
            <div class="card-header">
                <h3 class="card-title">გალერია</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form">
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(x => x.SortIndex)
                        @Html.TextBoxFor(x => x.SortIndex, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputFile">ატვირთეთ ფოტო</label>
                        <div class="input-group">
                            
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="ImageUpload" id="customFile">
                                <label class="custom-file-label" for="customFile"></label>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>


}