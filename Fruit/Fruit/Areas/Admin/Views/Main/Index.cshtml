@using (Html.BeginForm("Update", "Main", FormMethod.Post))
{
    for (int i = 0; i < 2; i++)
    {
        @Html.HiddenFor(c => c.ElementAtOrDefault(i).Id)

        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">General</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body" style="display: block;">
                    <div class="form-group">
                        @Html.LabelFor(c => c.ElementAtOrDefault(i).Title)
                        <textarea placeholder="შესავსები ველი" name="Title" id="inputDescription" class="form-control" rows="4" style="margin-top: 0px; margin-bottom: 0px; height: 124px;">@Model.ElementAtOrDefault(i).Title</textarea>
                    </div>
                </div>
                <div class="card-body" style="display: block;">
                    <div class="form-group">
                        @Html.LabelFor(c => c.ElementAtOrDefault(i).Subtitle)
                        <textarea placeholder="შესავსები ველი" name="Subtitle" id="inputDescription" class="form-control" rows="4" style="margin-top: 0px; margin-bottom: 0px; height: 124px;">@Model.ElementAtOrDefault(i).Subtitle </textarea>
                    </div>
                </div>
                <div class="card-body" style="display: block;">
                    <div class="form-group">
                        @Html.LabelFor(c => c.ElementAtOrDefault(i).Description)
                        <textarea placeholder="შესავსები ველი" name="Description" id="inputDescription" class="form-control" rows="4" style="margin-top: 0px; margin-bottom: 0px; height: 124px;">@Model.ElementAtOrDefault(i).Description</textarea>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    }

    <button type="submit" class="btn btn-primary">შენახვა</button>
}

