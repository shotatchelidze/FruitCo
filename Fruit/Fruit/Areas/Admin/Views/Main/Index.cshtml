@model List<Fruit.ViewModels.MainPageViewModel>
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Main Page</h2>

@using (Html.BeginForm("Update", "Main", FormMethod.Post))
{
    for (int i = 0; i < 2; i++)
    {
        @Html.HiddenFor(c => Model[i].Id)

        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    @if (i == 0)
                    {
                        <h3 class="card-title">მარცხენა ნაწილი</h3>
                    }
                    else
                    {
                        <h3 class="card-title">მარჯვენა ნაწილი</h3>
                    }

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body" style="display: block;">
                    <div class="form-group">
                        @Html.LabelFor(c => c.ElementAtOrDefault(i).Title)
                        <textarea placeholder="შესავსები ველი" name="@String.Format("[{0}].Title", i)"
                                  id="inputDescription" class="form-control" rows="4"
                                  style="margin-top: 0px; margin-bottom: 0px; height: 124px;">@Model.ElementAtOrDefault(i).Title</textarea>
                    </div>
                </div>
                <div class="card-body" style="display: block;">
                    <div class="form-group">
                        @Html.LabelFor(c => c.ElementAtOrDefault(i).Subtitle)
                        <textarea placeholder="შესავსები ველი" name="@String.Format("[{0}].Subtitle", i)"
                                  id="inputDescription" class="form-control" rows="4"
                                  style="margin-top: 0px; margin-bottom: 0px; height: 124px;">@Model.ElementAtOrDefault(i).Subtitle </textarea>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    }

    <button type="submit" class="btn btn-primary">შენახვა</button>
}

<div class="col-12">
    <div class="card card-primary">
        <div class="card-header">
            <div class="card-title">
                Ekko Lightbox
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-2">
                    <a href="~/Images/BackgroundImages/" data-toggle="lightbox" data-title="sample 1 - white" data-gallery="gallery">
                        <img src="~/Images/BackgroundImages/" class="img-fluid mb-2" alt="white sample">
                    </a>
                </div>
            </div>
        </div>
    </div>
    @Html.ActionLink("Add", "BackgroundImageForm", "Main", null, new { @class = "btn btn-primary btn-large" })
</div>    